@using TeacherStudentPortal.Models
@model AdminViewModel
@{
    ViewBag.Title = "Admin Page";
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-collapse collapse">
            @Html.Partial("_LogoutPartial")
        </div>
    </div>
</div>

<h2 style="color: darkblue; font-family: fantasy;">Hello Admin</h2>
<h4 style="color:lightseagreen">Please use below links to add records of students or teachers</h4>
<ul class="nav navbar-nav navbar-left">
    <li style="font-weight: bold">@Html.ActionLink("Add Teacher", "AddTeacher", "Home", routeValues: null, htmlAttributes: new { id = "addTeacherLink" })</li>
    <li style="font-weight: bold">@Html.ActionLink("Add Student", "AddStudent", "Home", routeValues: null, htmlAttributes: new { id = "addStudentLink" })</li>
</ul>
<br /><br /><hr/>
<div>
    @if (Model.TeachersList.Count > 0)
    {
        <h4 align="left" style="color:lightseagreen">The whole teachers list in the college</h4>
        <table>
            <thead>
                <tr>
                    <th style="padding-right: 60px; color: darkblue;">Name</th>
                    <th style="color: darkblue;">Subject Taught</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model.TeachersList)
                {
                    <tr>
                        <td>@teacher.TeacherName</td>
                        <td>@teacher.CourseTaught</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (Model.TeachersList.Count == 0)
    {
        <h4 align="left" style="color:lightseagreen">No Records - Admin didnot add any records related to teachers</h4>
    }
    <br />
    @if (Model.StudentList.Count > 0)
    {
        <h4 align="left" style="color:lightseagreen">The whole students list in the college</h4>
        <table>
            <thead>
            <tr>
                <th style="padding-right: 60px; color: darkblue;">Id</th>
                <th style="color: darkblue;">Name</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var student in Model.StudentList)
            {
                <tr style="padding-right: 20px;">
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                </tr>
            }
            </tbody>
        </table>
    }
    @if (Model.StudentList.Count == 0)
    {
        <h4 align="left" style="color:lightseagreen">No Records - Admin didnot add any records related to students</h4>
    }
</div>